<% @page_title = "New Fan" %>
<div id="fans">
<h1>New fan</h1>

<%= error_messages_for :fan %>

<% form_for(@fan) do |f| %>
  <p>
    <b>First Name</b><br />
    <%= f.text_field :firstname %>
  </p>

  <p>
    <b>Last Name</b><br />
    <%= f.text_field :lastname %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Zipcode</b><br />
    <%= f.text_field :zipcode %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

</div>